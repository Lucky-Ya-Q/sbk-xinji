<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.sbk.mapper.WxRelationMapper">
    <select id="selectWxRelationList" resultType="com.ruoyi.sbk.domain.WxRelation">
        select *
        from wx_relation
        <where>
            <if test="relation != null  and relation != ''">
                and relation like concat('%', #{relation}, '%')
            </if>
        </where>
    </select>

    <select id="listAll" resultType="com.ruoyi.sbk.domain.WxRelation">
        select *
        from wx_relation
    </select>
</mapper>