<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.sbk.mapper.WxBukaBankMapper">
    <select id="selectWxBukaBankList" resultType="com.ruoyi.sbk.domain.WxBukaBank">
        select *
        from wx_buka_bank
        <where>
            <if test="name != null  and name != ''">
                and name like concat('%', #{name}, '%')
            </if>
            and flag = 1
            and status = 2
            order by order_id
        </where>
    </select>
</mapper>